<div class='content'>
<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>
      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='wrap'>
  <div class="field">
    <h2>Personal Information</h2>
    <%= f.label "First Name" %>
    <%= f.text_field :first_name, :placeholder => 'John' %>
    <%= f.label "Middle Name" %>
    <%= f.text_field :middle_name, :placeholder => 'Q' %>
    <%= f.label "Last Name" %>
    <%= f.text_field :last_name, :placeholder => 'Nixon' %>
    <%= f.label "Sex" %>
    <%= f.text_field :sex, :placeholder => 'M' %>
    <%= f.label "Born" %>
    <%= f.date_select :dob, :include_blank => true, :start_year => Time.now.year - 600, :end_year => Time.now.year %><br />
    <%= f.label "Died" %>
    <%= f.date_select :dod, :include_blank => true, :start_year => Time.now.year - 600, :end_year => Time.now.year %><br />
    <br />
    <%= f.file_field :photo %>
  </div>
  <div class='relations'>
    <h2>Relative Information</h2>
    <h3>Parents</h3>
    <h3>Spouse</h3>
    <% @person.listSpouses.each do |spouse| %>
      <p><%= spouse.first_name %> <%= spouse.middle_name %> <%= spouse.last_name %></p>
    <% end %>
    <h3>Siblings</h3>
    <h3>Children</h3>
    <!-- <%= f.collection_select(:id, Person.all, :id, :fullName)%> -->
  </div>
</div>
<div class="actions">
  <%= f.submit %>
  <%= link_to 'Cancel', @person, :class => "warning" %>
</div>
<% end %>
</div>
